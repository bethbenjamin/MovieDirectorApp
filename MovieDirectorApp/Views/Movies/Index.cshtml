@model IEnumerable<MovieDirectorApp.Models.Movie>

@{
    ViewBag.Title = "Index";
}


<h2>Movie Database Index</h2><br />
                             <p>@Html.ActionLink("Create New Movie Entry", "Create") </p>
@foreach (var item in Model)
{
    <div class=" col-sm-6 col-md-4">
        <div class="thumbnail">
            <div class="captionheader">
                <h3>
                    @Html.DisplayFor(modelItem => item.Director.Name)<br />
                </h3>
                </div>
            <div class="caption">
                <h4>   @Html.DisplayFor(modelItem => item.Title)</h4>
                @Html.DisplayNameFor(model => model.Genre.Type): @Html.DisplayFor(modelItem => item.Genre.Type)
                <br />
                @Html.DisplayNameFor(model => model.ReleaseDate): @Html.DisplayFor(modelItem => item.ReleaseDate)  <br />
                @Html.DisplayNameFor(model => model.RTScore):  @Html.DisplayFor(modelItem => item.RTScore) <br />
                @Html.DisplayNameFor(model => model.Rating):    @Html.DisplayFor(modelItem => item.Rating)  <br />
                @Html.DisplayNameFor(model => model.WonAward):  @Html.DisplayFor(modelItem => item.WonAward) <br />
                @Html.ActionLink("Edit", "Edit", new { id = item.MovieID }) |
              
                @Html.ActionLink("Delete", "Delete", new { id = item.MovieID })
                <br />


                <p>

                    
                </p>

            </div>
        </div>
    </div>

}



